/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.block {
  width: 100%;
  background: #f5f5f5;
  text-align: center;
  line-height: 3;
}

.block + .block {
  border-top: 1px solid #eee;
}